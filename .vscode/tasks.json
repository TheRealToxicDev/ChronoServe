{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "go build -o bin/sysmanix ./client/main.go",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "go run ./client/main.go",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "go test ./tests/... -v",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "test with coverage",
            "type": "shell",
            "command": "go test ./tests/... -cover -coverprofile=coverage.out && go tool cover -html=coverage.out",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "golangci-lint run",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "generate mocks",
            "type": "shell",
            "command": "mockgen -source=${file} -destination=tests/mocks/${fileBasenameNoExtension}_mock.go",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "dev mode",
            "type": "shell",
            "command": "make dev",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
